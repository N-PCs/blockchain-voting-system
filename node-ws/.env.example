# ============================================
# WEBSOCKET SERVER CONFIGURATION
# ============================================

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
WS_PATH=/ws

# Security
JWT_SECRET=your-jwt-secret-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_CONNECTIONS=100

# Redis (for scaling, optional)
REDIS_URL=redis://localhost:6379
USE_REDIS=false

# Services Integration
BLOCKCHAIN_API_URL=http://localhost:5000
PHP_API_URL=http://localhost:8000/api/v1
BLOCKCHAIN_POLL_INTERVAL=10000  # 10 seconds

# Logging
LOG_LEVEL=info
LOG_FILE=websocket.log

# Heartbeat
HEARTBEAT_INTERVAL=30000  # 30 seconds
HEARTBEAT_TIMEOUT=60000   # 60 seconds

# Room Configuration
MAX_CLIENTS_PER_ROOM=1000
MAX_ROOMS=100