# ============================================
# BLOCKCHAIN VOTING SYSTEM - ENVIRONMENT VARIABLES
# ============================================

# ========== DATABASE CONFIGURATION ==========
DB_HOST=localhost
DB_PORT=3306
DB_NAME=voting_system
DB_USER=root
DB_PASS=

# ========== APPLICATION SETTINGS ==========
APP_ENV=development # development, staging, production
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC
APP_KEY=base64:your-secret-key-here-change-in-production

# ========== SECURITY SETTINGS ==========
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRE_HOURS=24
BCRYPT_ROUNDS=12
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ========== BLOCKCHAIN SERVICE ==========
BLOCKCHAIN_SERVICE_URL=http://localhost:5000
BLOCKCHAIN_SERVICE_TIMEOUT=30

# ========== WEBSOCKET SERVICE ==========
WS_SERVER_URL=ws://localhost:3001

# ========== RATE LIMITING ==========
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_MINUTES=15

# ========== LOGGING ==========
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_SLACK_WEBHOOK_URL=

# ========== EMAIL (for voter verification) ==========
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@votingsystem.com
MAIL_FROM_NAME="Voting System"

# ========== FILE UPLOADS ==========
UPLOAD_MAX_SIZE=2048
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf