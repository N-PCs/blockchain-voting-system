{
  "name": "blockchain-voting-system/php-backend",
  "description": "PHP backend for blockchain voting system",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Voting System Team",
      "email": "team@votingsystem.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "slim/slim": "^4.11",
    "slim/psr7": "^1.6",
    "guzzlehttp/guzzle": "^7.7",
    "vlucas/phpdotenv": "^5.5",
    "firebase/php-jwt": "^6.8",
    "monolog/monolog": "^3.4",
    "respect/validation": "^2.3",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.3",
    "squizlabs/php_codesniffer": "^3.7",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "VotingSystem\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "VotingSystem\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8000 -t public/",
    "test": "phpunit",
    "lint": "phpcs",
    "lint:fix": "phpcbf",
    "analyse": "phpstan analyse"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}